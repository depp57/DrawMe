<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/btn_play_multiplayer"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/play_multiplayer"
        android:textSize="@dimen/text_main_size"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btn_play_ai"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/play_ai"
        android:textSize="@dimen/text_main_size"
        android:layout_margin="10dp" />
</LinearLayout>
